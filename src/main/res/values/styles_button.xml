<resources>

    <style name="AppTheme.Button">
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.UnelevatedButton.White</item>
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button.UnelevatedButton.White</item>
        <item name="android:height">56dp</item>
    </style>

    <style name="AppTheme.Button.Big">
        <item name="android:height">72dp</item>
    </style>

    <style name="AppTheme.Button.Big.Black1e">
        <item name="colorAccent">#1e000000</item>
        <item name="android:textColor">@color/black00</item>
        <item name="android:height">72dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.UnelevatedButton.White">
        <item name="android:textAppearance">@style/PosPosButtonWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="iconPadding">8dp</item>
    </style>


    <style name="Widget.MaterialComponents.Button.UnelevatedButton.FloatingWhiteButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/ButtonWhite</item>
        <item name="android:layout_gravity">center|bottom</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingStart">42dp</item>
        <item name="android:paddingEnd">42dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="android:translationZ">0dp</item>
    </style>

    <style name="PosButtonWhite">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">@font/sans_serif_medium</item>
    </style>

    <style name="Widget.MaterialComponents.Button.UnelevatedButton.White.Pos">
        <item name="android:textAppearance">@style/PosButtonWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.UnelevatedButton.White.Pos.Floating">
        <item name="android:paddingTop">22dp</item>
        <item name="android:paddingBottom">22dp</item>
        <item name="android:textAppearance">@style/PosButtonWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.Pos" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/PosButtonWhite</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

</resources>